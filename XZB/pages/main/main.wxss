/* pages/main/main.wxss */
/* 个人信息 */
.container{
  width: 100%;
 position: fixed;
 top: 0;
 left: 0;
 bottom: 0;
 right:0;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.userinfo{
  width: 100%;
  text-align: right;
  padding: 20rpx 0px;
}
.userinfo-login{
  font-size: 34rpx;
  display: inline;
  border-width: 0px;
  color: #1296db;
}
.userinfo-avatar{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin: 0 10rpx;
}
.userinfo-nickname{
 font-size: 30rpx;
 margin: 0 10rpx;
}
/*预览图片  */
.preimg-wraper{
  width: 100%;
  padding:0px 40rpx;
  position: relative;
  margin-top: 40rpx;

}
.preimg-img{
  width: 100%;
}
.preimg-img image{
  width: 90%;
  margin-left: 10px; 
  background: white;
  padding: 2%;
  border-radius:6px; 
}

.preimg-shadom{
  width: 86%;
  position: absolute;
  left:30px;
  top: 0;
  bottom: 5px;
  background: rgba(0, 0, 0, .6);
  z-index: 1000;
  
}
.preimg-shadom image{
  width: 32px;
  height: 32px;
  position: absolute;
  left: 50%;
  margin-left: -16px;
  top: 50%;
  margin-top: -16px;
}
.upload-shaom{
  width: 100%;
  position: absolute;
  left:0px;
  top: 0;
  bottom: 5px;
  background: rgba(0, 0, 0,0);
}
/*选择方案  */
.choose-wrap{
  width: 100%;
  overflow-x: auto;
  border-bottom:1rpx solid #f1f1f1; 
  border-top:1rpx solid #f1f1f1; 
  background: white;
  margin-top:40rpx;
}
.choose-lists{
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  padding: 26rpx 0px;
}
.choose-item{
  flex: 0 0 64px;
  margin: 0px 10rpx;
  position: relative;
}
.choose-suo{
  position: absolute;
  right: 0px;
  top: 0px;
}
.choose-suo image{
  width: 30px;
  height: 30px;
}
.choose-item.active .choose-text{
  color:#1afa29;
}
.choose-img image{
  width: 140rpx;
  height: 140rpx;
}
.choose-text{
  font-size: 12px;
  color: #888;
}
/*选择图片按钮  */
.Btn-wrap{
  margin: 0rpx 0px auto 0px;
  width: 200rpx;
  position: relative;
  top: 30rpx;
}
.Btn-wrap button{
  letter-spacing: 4rpx;
  font-size: 32rpx;
}
/*联系方式  */
.lianxi{
  width: 100%;
  font-size: 14px;
  display: flex;
  flex-direction:row; 
  padding: 10rpx 0px;
}
.text{
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 12px;
}
.lianxi .text,.lianxi .text-des{
  display: inline-block
}
.lianxi .text-des{
  font-size: 10px;
  color: #666;
}
/* loading */
.loading-wrap{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .1);
  z-index: 1000;
}
.loading-wrap image{
  width:40px;
  height:40px;
  position: absolute;
  top: 350rpx;
  left: 50%;
  margin-left: -20px;
}