/* pages/my/my.wxss */
.my-header{
  width: 100%;
  background: #4aa6fb;
}
.my{
    height: 150px;
    position: relative;
}
.my-icon{
  width: 64px;
  position: absolute;
  left: 50%;
  margin-left: -32px;
  top:14px;
}
.userinfo-avatar{
  width: 64px;
  height: 64px;
  border-radius: 50%;
}
.icon-vip{
  width: 14px;
  height: 14px;
  position: absolute;
  top: -5px;
  right: 0px;
}
.userinfo-nickname{
  margin-top: 10rpx;
  position: relative;
  font-size: 13px;
  color: white;
  text-align: center;
}
.vip-wraper{
  position: absolute;
  right: 30px;
  top: 40px;
  color: #fff;
  border-radius: 20px;
  background: rgba(255,255,255,.2);
  width: 100px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  font-size: 12px;
}
.icon-huanyuan{
  width: 14px;
  height: 12px;
  vertical-align: middle;
  margin-right: 10rpx;
}

.history-lists{
  position: relative;
  top: -60px;
  width: 100%;
}
.history-wraper{
  margin: 20px;
  box-shadow: 0px 0px 15px #888;
  background: #fff;
  border-radius: 6px;
}
.history-item{
border-bottom: 1px dashed #ddd;
}
.history-item:last-child{
border: none;
}	
.time{
  font-size: 12px;
  color: #888;
  line-height: 30px;
  margin-left: 10px;
}
.history-img{
  width: 64px;
  height: 64px;
  margin-left: 10px;
  padding-bottom: 10px;
}
.history-img image{
  width: 64px;
  height: 64px;
}